          <span class="logo__text">URL Shortener</span>
        </a>
        <a href="#">Latest links</a>
      </div>
    </header>
    <main>
      <div class="container">
        <h1 class="title">Simplify your links</h1>
        <form action="/shortenUrl" method="post" class="form" data-form>
          <input
            type="url"
            class="url"
            name="url"
            minlength="11"
            placeholder="https://www.example.com"
            autofocus
            autocomplete="off"
            required
            data-input
          />
          <input type="text" class="id" name="id" autocomplete="off" placeholder="ID (Not Required)" min />
          <button type="submit" class="submit" data-submit>Shorten</button>
        </form>

        <%# TODO: Make tables great again %> 
        <table>
          <thead>
            <tr>
              <th>Link</th>
              <th>ID</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(url => { %>
              <tr>
                <td><a href="<%= url.full %>"><%= url.full %></a></td>
                <td><a href="<%= url.short %>"><%= url.short %></a></td>
                <td><%= url.clicks _%></td>
              </tr>
            <% }) %>
          </tbody>
          </table>
      </div>
    </main>
  </body>
</html>
